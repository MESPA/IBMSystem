@model IEnumerable<CatalogoProductos.Models.Cliente>
<div>
    <h1>Lista De Clientes</h1>
</div>

<a class="btn btn-success" href="@Url.Action("Crear")">Crear Cliente</a>
<br />
<br />
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nombre</td>
                <td>@cliente.Direccion</td>
                <td>
                    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#modalDetalles-@cliente.Id">
                        Ver detalles Modal
                    </a>|
                    <a class="btn btn-info" href="@Url.Action("Editar", new { id = cliente.Id })">Editar</a> |
                    <!-- Resto de acciones: Editar, Eliminar... -->

                    <div class="modal fade" id="modalDetalles-@cliente.Id" tabindex="-1" role="dialog" aria-labelledby="modalDetallesLabel-@cliente.Id" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalDetallesLabel-@cliente.Id">Detalles de Producto</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <label class="col-lg-8 control-label">Nombre </label>
                                    <p>@cliente.Nombre</p>
                                    <label class="col-lg-8 control-label">Direccion </label>
                                    <p>@cliente.Direccion</p>

                                    <!-- Resto de los detalles del producto -->
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
