@model IEnumerable<CatalogoProductos.Models.Tracking>

@{
    ViewData["Title"] = "Seguimiento de Ordenes";
}

<h1>Seguimiento de Ordenes</h1>


<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrdenId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrdenId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Cambiar Estatus</a> |

                @*<a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalle</a> |*@

                <a href="#" class="btn btn-info" data-toggle="modal" data-target="#modalDetalles-@item.Id">
                    Ver detalle
                </a>|

                <div class="modal fade" id="modalDetalles-@item.Id" tabindex="-1" role="dialog" aria-labelledby="modalDetallesLabel-@item.Id" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalDetallesLabel-@item.Id">Detalle de Seguimiento</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <label class="col-lg-8 control-label">Estatus </label>
                                <p>@item.Estatus</p>
                                <label class="col-lg-8 control-label">Descripcion </label>
                                <p>@item.Descripcion</p>

                                <!-- Resto de los detalles del producto -->
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
